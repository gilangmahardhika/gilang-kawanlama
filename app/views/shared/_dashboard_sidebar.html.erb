<aside class="relative bg-sidebar h-screen w-64 hidden sm:block shadow-xl">
    <div class="p-6">
        <%= link_to "Admin", products_path, class: "text-white text-3xl font-semibold uppercase hover:text-gray-300" %>
        <%= button_to '<i class="fas fa-plus mr-3"></i> New Product'.html_safe, new_product_path, 
            method: :get, 
            form_class: "w-full bg-white cta-btn font-semibold py-2 mt-5 rounded-br-lg rounded-bl-lg rounded-tr-lg shadow-lg hover:shadow-xl hover:bg-gray-300 flex items-center justify-center" %>
    </div>


    <nav class="text-white text-base font-semibold pt-3">
        <%= link_to products_path, class: "flex items-center #{ controller.controller_name == 'products' ? 'active-nav-link' : '' } text-white py-4 pl-6 nav-item" do %>
            <i class="fas fa-tags mr-3"></i>
            Products
        <% end %>
       
        <%= link_to exports_path, class: "#{controller.controller_name == 'exports' ? 'active-nav-link' : '' } flex items-center text-white opacity-75 hover:opacity-100 py-4 pl-6 nav-item" do %>
            <i class="fas fa-file mr-3"></i>
            Exports
        <% end %>
    </nav>
</aside>