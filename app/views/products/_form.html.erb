<%= form_for @product, class: "space-y-6"  do |f| %>
    <div>
        <%= f.label :name, class: "block text-sm font-medium leading-6 text-gray-900" %>
        <div class="mt-2">
            <%= f.text_field :name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", required: true, id: "product_name" %>
        </div>
    </div>
    <div>
        <div class="flex items-center justify-between">
            <%= f.label :sku, class: "block text-sm font-medium leading-6 text-gray-900" %>
        </div>
        <div class="mt-2">
            <%= f.text_field :sku, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", required: true, id: "product_sku" %>
        </div>
    </div>
    <div>
        <div class="flex items-center justify-between">
            <%= f.label :description, class: "block text-sm font-medium leading-6 text-gray-900" %>
        </div>
        <div class="mt-2">
            <%= f.text_area :description, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", required: true, id: "product_sku" %>
        </div>
    </div>
    <div>
        <div class="flex items-center justify-between">
            <%= f.label :count, class: "block text-sm font-medium leading-6 text-gray-900" %>
        </div>
        <div class="mt-2">
            <%= f.number_field :count, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", required: true, id: "product_count" %>
        </div>
    </div>
    <div>
        <div class="flex items-center justify-between">
            <%= f.label :first_photo, class: "block text-sm font-medium leading-6 text-gray-900" %>
        </div>
        <div class="mt-2">
            <%= f.file_field :first_photo, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", required: true, id: "product_count" %>
        </div>
    </div>
    <div>
        <div class="flex items-center justify-between">
            <%= f.label :second_photo, class: "block text-sm font-medium leading-6 text-gray-900" %>
        </div>
        <div class="mt-2">
            <%= f.file_field :second_photo, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", id: "product_count" %>
        </div>
    </div>
    <div>
        <div class="flex items-center justify-between">
            <%= f.label :third_photo, class: "block text-sm font-medium leading-6 text-gray-900" %>
        </div>
        <div class="mt-2">
            <%= f.file_field :third_photo, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", id: "product_count" %>
        </div>
    </div>
    <div class="mt-2">
        <%= f.submit "Save", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
            Submit
        <% end %>
        
    </div>
    <div>
<% end %>