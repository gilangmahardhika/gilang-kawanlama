<div class="w-full overflow-x-hidden border-t flex flex-col">
    <main class="w-full flex-grow p-6">
        <h1 class="text-3xl text-black pb-6"><%= @product.name %></h1>
            <div class="w-full mt-12">
                <p class="text-xl pb-3 flex items-center">
                    <i class="fas fa-tag mr-3"></i> <%= @product.sku %>
                </p>
                <div class="bg-white overflow-auto">
                    
                    <div class="container mx-auto px-2 mt-2 mb-2">
                        <strong>Description</strong>
                        <p><%= @product.description %></p>
                    </div>
                    <div class="columns-3 px-4 mt-20">
                        <%= image_tag @product.first_photo_url, class: "w-full aspect-square" if @product.first_photo.present? %>
                    </div>
                    <div class="columns-3 px-4 mt-20">
                        <%= image_tag @product.second_photo_url, class: "w-full aspect-square" if @product.second_photo.present? %>
                    </div>
                    <div class="columns-3 px-4 mt-20">
                        <%= image_tag @product.third_photo_url, class: "w-full aspect-square" if @product.third_photo.present? %>
                    </div>
                </div>
            </div>
    </main>
    
    <footer class="w-full bg-white text-right p-4">
    </footer>
</div>




